import boto3
client = boto3.client('dynamodb')

client.create_table(
    AttributeDefinitions=[
        {
            'AttributeName': 'phone',
            'AttributeType': 'N'
        },
    ],
    KeySchema=[
        {
            'AttributeName': 'phone',
            'KeyType': 'HASH'
        },
    ],
    TableName='customers',
    BillingMode='PAY_PER_REQUEST',
)


client.put_item(
    TableName='customers',
    Item={
        'name': {
            'S': 'Jacob',
        },
        'age':{
            'N': '23',
        },
        'id': {
            'N': '2797082',
        }
    },
)


response = client.get_item(
    TableName='customers',
    Key={
        'phone': {
            'N': '2797082',
        }
    },
)

print(response)
